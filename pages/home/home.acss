

.index-wrap {
    display: flex;
    flex: 1;
    background-color: #F7F7F7;
    position: relative;
    justify-content: center;
    flex-direction: column;
    width: 750rpx;
    background: url('/image/bg.png') left -150rpx no-repeat;
    background-size: contain;
}
.sent-wrap{
    flex: 1;
    display: flex;
    align-items: center;
    width: 750rpx;
    /* height:822rpx; */

    /* background-size: 100% 100%; */
}
.sent-btn {
    width: 412rpx;
    height: 412rpx;
    margin: 0 auto;
    background-image: url('image/bgbefore.png');
    background-repeat: no-repeat;
    background-size: 100% 100%;
}
