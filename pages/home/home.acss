.sent-btn.active{
   background-image: url('image/bgafter.png'); 
}


.sent-btn .icon-wrap {
    position: relative;
    width: 208rpx;
    margin: 0 auto 24rpx auto;
    padding: 82rpx 0 16rpx 0;
}

.sent-btn .sent-icon {
    width: 112rpx;
    height: 108rpx;
    margin: 100rpx auto 10rpx;
    background-image: url("image/flybefore.png");
    background-repeat: no-repeat;
    background-size: 100% 100%;
}
.sent-btn.active .sent-icon {
   background-image: url("image/flyafter.png");
}
.sent-btn.active .send {
    color: #FF591A;
}
.sent-btn .send {
    font-size: 40rpx;
    color: #FF4747;
    letter-spacing: 10rpx;
    text-align: center;
    margin:30rpx 0 0 0;
}

.record-wrap {
    flex: 1;
    display: flex;
    justify-content: center;
}

.record-wrap .record{
    display: inline-block;
    width: 356rpx;
    height: 76rpx;
    margin:236rpx 0 0 0;
}

.realName-wrap {
    position: absolute;
    bottom: 30rpx;
    width: 100%;
    text-align: center;
}

.realName-wrap .realname {
    font-size: 28rpx;
    color: #A8A8A8;
    padding: 20rpx 0;
}

.foot-wrap {
    position: absolute;
    bottom: 0;
    width: 100%;
}
