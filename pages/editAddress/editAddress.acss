}

.radio-tit {
  font-size: 28rpx;
  color: #000;
  margin-right: 12rpx;
}

.message-input .radio-cont {
  font-size: 28rpx;
  color: #000;
}

.adr-type-wrap {
  display: flex;
  align-items: center;
  margin-right: 42rpx;
}

/*模拟radio*/

.message-input input[type='radio'] {
  visibility: hidden;
  cursor: pointer;
}

.message-input input[type='radio'] + label {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24rpx;
  height: 24rpx;
  margin-right: 5rpx;
  position: relative;
  background-color: #000;
  transition: background 0.2s linear;
  box-sizing: border-box;
}

.message-input input[type='radio'] + label text {
  display: block;
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  background-color: #fff;
}

/*相邻选择器来模拟选项被选择的效果*/

.message-input input[type='radio'] + label {
  border-radius: 50%;
}

.message-input input:checked[type='radio'] + label {
  border: 1rpx #000 solid;
  background-color: #fff;
}

.message-input input:checked[type='radio'] + label text {
  width: 14rpx;
  height: 14rpx;
  background-color: #000;
}

