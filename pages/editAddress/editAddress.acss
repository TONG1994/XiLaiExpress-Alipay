/* 三级选择 */

.section {
  padding: 30rpx 0rpx 30rpx 10rpx;
  overflow: hidden;
  box-sizing: border-box;
}

/*选择器*/

.selector {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999999;
}

.selector .inner_box {
  position: relative;
  z-index: 999999;
}

.selector .header_box {
  padding: 25rpx 0;
  overflow: hidden;
  box-sizing: border-box;
  background: #fbf9fe;
}

.selector .header_box .item {
  float: left;
  font-size: 34rpx;
  color: #586c94;
  box-sizing: border-box;
}

.selector .header_box .l {
  width: 25%;
  padding-left: 25rpx;
}

.selector .header_box .c {
  width: 50%;
  text-align: center;
}

.selector .header_box .r {
  width: 25%;
  text-align: right;
  padding-right: 25rpx;
}

.selector .selected {
  height: 90rpx;
}

.selector .picker_box {
  width: 100%;
  height: 485rpx;
  background: #fff;
}

.selector .picker_box picker-view-column {
  text-align: center;
}

.selector .picker_box picker-view-column view {
  line-height: 90rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.a-picker-view-picker-item{
  overflow: hidden;
}

.selector .layer {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.5);
}

/*1  */

.loading {
  position: fixed;
  left: 50%;
  top: 40%;
  z-index: 1001;
  transform: translate(-50%);
}

.loading image {
  width: 100rpx;
  height: 100rpx;
  background-size: contain;
}

.dotradio {
  display: flex;
  align-items: center;
}

.dotradio .fromaddr, .dotradio .desaddr {
  margin: 0 30rpx 0 0;
  position: relative;
}

.dotradio image {
  width: 28rpx;
  height: 28rpx;
  box-sizing: contain;
  margin-right: 10rpx;
  background-size: contain;
  display: none;
  position: absolute;
  left: 0px;
  top: 0px;
}

.dotradio image.active {
  display: inline-block;
}

.dotradio text {
  padding-left: 38rpx;
}

/*动画效果  */

@keyframes layui-m-anim-up {
  0% {
    opacity: 0;
    -webkit-transform: translateY(800px);
    transform: translateY(800px);
  }

  100% {
    opacity: 1;
    -webkit-transform: translateY(0);
    transform: translateY(0);
  }
}

.layui-m-anim-up {
  -webkit-animation-name: layui-m-anim-up;
  animation-name: layui-m-anim-up;
}

.inner_box {
  pointer-events: auto;
  -webkit-overflow-scrolling: touch;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  -webkit-animation-duration: 0.3s;
  animation-duration: 0.3s;
}
